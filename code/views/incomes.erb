<nav class="header">
  <a class="add" href="/incomes/new">+</a>
  <h2 class="title">Incomes</h2>
  <a class="close" href="/">x</a>
</nav>
<div class="table">
  <div class="thead">
    <div class="th">Date</div>
    <div class="th50">Name</div>
    <div class="th30">Amount</div>
    <div class="th"></div>
  </div>
  <div class="tbody">
    <% @incomes.each do |income| %>
      <div class="tr">
        <div class="td"><%= income.day_in_month %></div>
        <div class="td50"><a href="/incomes/<%= income.id %>/edit"><%= income.name %></a></div>
        <div class="td30 amount"><%= income.amount %></div>
        <div class="td"><a class="delete" href="/incomes/<%= income.id %>/delete"><img class="icon" src="/images/throw-to-paper-bin.svg"></i></a></div>
      </div>
    <% end %>
  </div>
  <div class="tfoot">

  </div>
</div>
