<h1>Edit Commitment</h1>
<hr>
<form action="/commitments/<%= @commitment.id %>" method="post">
  <label for="name">Name</label>
  <input id="name" name="name" type="text" value="<%= @commitment.name%>"></input>
  <hr>
  <label for="account">Account</label>
  <select class="account" name="account_id">
    <% @accounts.each do |account| %>
      <option value="<%= account.id %>" <%= "selected" if account.id == @commitment.account_id %> >
        <%= account.name %>
      </option>
    <% end %>
  </select>
  <hr>
  <label for="vendor">Vendor</label>
  <select class="vendor" name="vendor_id">
    <% @vendors.each do |vendor| %>
      <option value="<%= vendor.id %>"  <%= "selected" if vendor.id == @commitment.vendor_id %>
        >
        <%= vendor.name %>
      </option>
    <% end %>
  </select>
  <hr>
  <label for="amount">Amount, Â£</label>
  <input type="text" id="amount" name="amount" value="<%= @commitment.amount %>"></input>
  <hr>
  <label for="day">Day of Month</label>
  <input id="day" type="number" name="day_in_month" value="1" min="1" max="31">
  <hr>
  <input type="submit" value="Submit">
</form>
