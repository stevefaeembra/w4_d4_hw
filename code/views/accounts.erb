<nav class="header">
  <a class="add" href="/accounts/new">+</a>
  <h2 class="title">Accounts</h2>
  <a class="close" href="/">x</a>
</nav>
<div class="table">
  <div class="thead">
    <div class="th">ID</div>
    <div class="th80">Name</div>
    <div class="th"></div>
  </div>
  <div class="tbody">
    <% @accounts.each do |account| %>
      <div class="tr">
        <div class="td"><%= account.id %></div>
        <div class="td80"><a href="/accounts/<%= account.id %>/edit"><%= account.name %></a></div>
        <div class="td"><a class="delete" href="/accounts/<%= account.id %>/delete"><img class="icon" src="/images/throw-to-paper-bin.svg" ></i></a></div>
      </div>
    <% end %>
  </div>
  <div class="tfoot">
  </div>
</div>
