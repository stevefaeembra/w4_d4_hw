<nav class="header">
  <a class="add" href="/categories/new">+</a>
  <h2 class="title">Categories</h2>
  <a class="close" href="/">x</a>
</nav>
<table>
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th></th>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><a href="/categories/<%= category.id %>/edit"><%= category.name %></a></td>
        <td><a class="delete" href="/categories/<%= category.id %>/delete"><img class="icon" src="/images/throw-to-paper-bin.svg"></i></a></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>

  </tfoot>
</table>
