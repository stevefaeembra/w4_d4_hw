<nav class="header">
  <a class="add" href="/categories/new">+</a>
  <h2 class="title">Categories</h2>
  <a class="close" href="/">x</a>
</nav>
<div class="table">
  <div class="thead">
    <div class="th">ID</div>
    <div class="th80">Name</div>
    <div class="th"></div>
  </div>
  <div class="tbody">
    <% @categories.each do |category| %>
      <div class="tr">
        <div class="td"><%= category.id %></div>
        <div class="td80"><a href="/categories/<%= category.id %>/edit"><%= category.name %></a></div>
        <div class="td"><a class="delete" href="/categories/<%= category.id %>/delete"><img class="icon" src="/images/throw-to-paper-bin.svg"></i></a></div>
      </div>
    <% end %>
  </div>
  <div class="tfoot">
  </div>
</div>
