<nav class="header">
  <a class="add" href="/commitments/new">+</a>
  <h2 class="title">Commitments</h2>
  <a class="close" href="/">x</a>
</nav>
<div class="table">
  <div class="thead">
    <div class="th20">Day</div>
    <div class="th50">Name</div>
    <div class="th20">Amount</div>
    <div class="th"></div>
  </div>
  <div class="tbody">
    <% @commits.each do |commitment| %>
      <div class="tr">
        <div class="td20"><%= commitment.day_in_month %></div>
        <div class="td50"><a href="/commitments/<%= commitment.id %>/edit"><%= commitment.name %></a></div>
        <div class="td20 amount" class="amount"><%= commitment.amount %></div>
        <div class="td"><a class="delete" href="/commitments/<%= commitment.id %>/delete"><img class="icon" src="/images/throw-to-paper-bin.svg"></i></a></div>
      </div>
    <% end %>
  </div>
  <div class="tfoot">
  </div>
</div>
