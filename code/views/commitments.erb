<nav>
  <a class="add" href="/commitments/new">New</a>
  <h2>Commitments</h2>
</nav>
<table>
  <thead>
    <th>ID</th>
    <th>Date</th>
    <th>Name</th>
    <th>Account ID</th>
    <th>Vendor ID</th>
    <th>Amount</th>
    <th></th>
  </thead>
  <tbody>
    <% @commits.each do |commitment| %>
      <tr>
        <td><%= commitment.id %></td>
        <td><%= commitment.day_in_month %></td>
        <td><%= commitment.name %></td>
        <td><%= commitment.account_id %></td>
        <td><%= commitment.vendor_id %></td>
        <td class="amount"><%= commitment.amount %></td>
        <td><a class="delete" href="/commitments/<%= commitment.id %>/delete"><img class="icon" src="/images/throw-to-paper-bin.svg"></i></a></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>

  </tfoot>
</table>
